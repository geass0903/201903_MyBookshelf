<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jp.gr.java_conf.nuranimation.my_bookshelf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        tools:targetApi="O"
        android:fullBackupContent="false"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="jp.gr.java_conf.nuranimation.my_bookshelf.MyBookshelfApplicationData"
        android:networkSecurityConfig="@xml/network_security_config">
        <meta-data android:name="android.security.net.config"
            android:resource="@xml/network_security_config" />
        <activity
            android:name="jp.gr.java_conf.nuranimation.my_bookshelf.ui.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            android:configChanges="locale|keyboard|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>
                <data android:scheme="db-fh2si4dchz272b1" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="jp.gr.java_conf.nuranimation.my_bookshelf.service.BookService" />

    </application>

</manifest>