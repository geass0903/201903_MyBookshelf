<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:ignore="SpUsage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/book_detail_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/ic_black_image_24dp" />

        <Button
            android:id="@+id/book_detail_button_download_book_data"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/book_detail_image"
            android:layout_toEndOf="@id/book_detail_image"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:paddingStart="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingEnd="@dimen/padding_normal"
            android:layout_gravity="center_vertical|start"
            android:gravity="center"
            android:background="@drawable/selector_rounded_rectangle_transparent"
            android:drawableLeft="@drawable/ic_black_book_24dp"
            android:drawableStart="@drawable/ic_black_book_24dp"
            android:drawablePadding="@dimen/padding_small"
            android:textSize="@dimen/text_size_small"
            android:textColor="#FF000000"
            android:text="@string/label_download_book_data" />

        <LinearLayout
            android:id="@+id/book_detail_isbn_view"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_detail_button_download_book_data"
            android:layout_toRightOf="@id/book_detail_image"
            android:layout_toEndOf="@id/book_detail_image"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/label_isbn" />
            <TextView
                android:id="@+id/book_detail_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_detail_sales_date_view"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_detail_isbn_view"
            android:layout_toRightOf="@id/book_detail_image"
            android:layout_toEndOf="@id/book_detail_image"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/label_sales_date" />
            <TextView
                android:id="@+id/book_detail_sales_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/label_unknown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_detail_price_view"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_detail_sales_date_view"
            android:layout_toRightOf="@id/book_detail_image"
            android:layout_toEndOf="@id/book_detail_image"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/label_item_price" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/unit_price_yen_mark" />
            <TextView
                android:id="@+id/book_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/label_unknown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_detail_rating_view"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_detail_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#FF000000"
                android:text="@string/label_review" />
            <RatingBar
                android:id="@+id/book_detail_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="false"
                android:rating="0"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:layout_marginStart="-20dp"
                android:layout_marginLeft="-20dp"
                style = "@style/Widget.AppCompat.RatingBar.Indicator" />
        </LinearLayout>

        <EditText
            tools:targetApi="o"
            android:id="@+id/book_detail_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/book_detail_rating_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:background="@drawable/selector_rectangle_transparent"
            android:drawablePadding="@dimen/padding_small"
            android:drawableRight="@drawable/ic_black_edit_24dp"
            android:drawableEnd="@drawable/ic_black_edit_24dp"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:autofillHints="@string/input_hint_title"
            android:hint="@string/input_hint_title"
            android:inputType="text"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#FF000000" />

        <EditText
            tools:targetApi="o"
            android:id="@+id/book_detail_author"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/book_detail_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:background="@drawable/selector_rectangle_transparent"
            android:drawablePadding="@dimen/padding_small"
            android:drawableRight="@drawable/ic_black_edit_24dp"
            android:drawableEnd="@drawable/ic_black_edit_24dp"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:autofillHints="@string/input_hint_author"
            android:hint="@string/input_hint_author"
            android:inputType="text"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#FF000000" />

        <EditText
            tools:targetApi="o"
            android:id="@+id/book_detail_publisher"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/book_detail_author"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:background="@drawable/selector_rectangle_transparent"
            android:drawablePadding="@dimen/padding_small"
            android:drawableRight="@drawable/ic_black_edit_24dp"
            android:drawableEnd="@drawable/ic_black_edit_24dp"
            android:paddingLeft="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:autofillHints="@string/input_hint_publisher"
            android:hint="@string/input_hint_publisher"
            android:inputType="text"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#FF000000" />

        <LinearLayout
            android:id="@+id/book_detail_read_status_view"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_detail_publisher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#FF000000"
                android:text="@string/label_read_status" />
            <Spinner
                android:id="@+id/book_detail_spinner_read_status"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:background="@drawable/selector_rectangle_transparent"
                android:spinnerMode="dialog" />
        </LinearLayout>








        <LinearLayout
            android:layout_below="@id/book_detail_read_status_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">















            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_normal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="#FF000000"
                    android:text="@string/Label_ReadDate" />
                <TextView
                    android:id="@+id/book_detail_read_date"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableRight="@drawable/ic_black_calendar_24dp"
                    android:drawableEnd="@drawable/ic_black_calendar_24dp"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/selector_rectangle_transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="#FF000000"
                    android:text="@string/label_no_data" />
            </LinearLayout>



            <Button
                android:id="@+id/book_detail_button_rakutenUrl"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:paddingStart="@dimen/padding_normal"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_normal"
                android:gravity="center_vertical"
                android:background="@drawable/selector_rounded_rectangle_transparent"
                android:drawableLeft="@drawable/ic_black_web_page_24dp"
                android:drawableStart="@drawable/ic_black_web_page_24dp"
                android:drawablePadding="@dimen/padding_small"
                android:textSize="@dimen/text_size_small"
                android:textColor="#FF000000"
                android:text="@string/Label_RakutenUrl" />



        </LinearLayout>


    </RelativeLayout>
















</ScrollView>
