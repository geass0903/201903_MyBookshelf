<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Sort Shelf -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/Label_ShelfBooksSortSetting"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
            </LinearLayout>
            <Spinner
                android:id="@+id/ShelfBooksSortSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button"
                android:layout_margin="@dimen/margin_small"
                android:spinnerMode="dialog" />
        </LinearLayout>
        <!-- end Sort Shelf -->

        <!-- Sort Search Result -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/Label_SearchBooksSortSetting"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
            </LinearLayout>
            <Spinner
                android:id="@+id/SearchBooksSortSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button"
                android:layout_margin="@dimen/margin_small"
                android:spinnerMode="dialog" />
        </LinearLayout>
        <!-- end Sort Search_Result -->

        <!-- Export/Import -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/Label_ExportImport"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
            </LinearLayout>
            <Button
                android:id="@+id/settings_button_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/selector_button"
                android:textColor="#FFFFFFFF"
                android:text="@string/Label_Export_CSV"/>
            <Button
                android:id="@+id/settings_button_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/selector_button"
                android:textColor="#FFFFFFFF"
                android:text="@string/Label_Import_CSV"/>
        </LinearLayout>
        <!-- end Export/Import -->
        <!-- Dropbox Backup/Restore-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/Label_Link_up_Dropbox"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@color/colorLineMargin" />
            </LinearLayout>
            <Button
                android:id="@+id/settings_button_login_dropbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/selector_button"
                android:textColor="#FFFFFFFF"
                android:text="@string/Label_Login_Dropbox" />
            <Button
                android:id="@+id/settings_button_logout_dropbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/selector_button_logout"
                android:textColor="#FFFFFFFF"
                android:text="@string/Label_Logout_Dropbox" />
            <Button
                android:id="@+id/settings_button_backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/selector_button"
                android:textColor="#FFFFFFFF"
                android:text="@string/Label_Backup" />
            <Button
                android:id="@+id/settings_button_restore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/selector_button"
                android:textColor="#FFFFFFFF"
                android:text="@string/Label_Restore" />
        </LinearLayout>
        <!-- end Dropbox Backup/Restore-->
    </LinearLayout>
</ScrollView>

